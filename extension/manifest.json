{
    "manifest_version": 3,
    "name": "YouTube RAG Summarizer",
    "version": "1.0",
    "description": "Summarize and ask questions about YouTube videos using RAG.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Summarize Video"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}